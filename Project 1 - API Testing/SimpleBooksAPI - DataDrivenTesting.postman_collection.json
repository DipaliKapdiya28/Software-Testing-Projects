				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseURL}}/orders/{{orderid_env}}",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"orders",
						"{{orderid_env}}"
					]
				}
			},
			"response": []
		},
